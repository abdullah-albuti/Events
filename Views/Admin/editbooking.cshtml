@model Booking
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{

    var EventTobooking = ViewBag.EventTobooking;
}
<div class="container">
    <h2>تعديل شخص   يدوي</h2>
    <form asp-action="update_booking" method="post">

        <input type="hidden" asp-for="BookingId" />

        <div class="form-group">
            <label>اسم :</label>
            <input asp-for="CustomerName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>الرقم الهاتف :</label>
            <input asp-for="CustomerPhone" class="form-control" required />
        </div>


        <div class="form-group">
            <label>البريد :</label>
            <input asp-for="CustomerEmail" class="form-control" required />
        </div>


        <div class="form-group">
            <label>وقت حجز الذكره :</label>
            <input asp-for="BookingDate" class="form-control" required />
        </div>

        <div class="form-group">
            <label> الفعالية:</label>
            <select class="form-control" name="Event_ID" required>
                @if (EventTobooking != null)
                {
                    foreach (var item in EventTobooking)
                    {
                        <option value="@item.EventId">@item.Name</option>
                    }
                }
                else
                {
                    <option value="">لا توجد فعالية متاحة</option>
                }
            </select>
        </div>



        <button type="submit" class="btn btn-success">إضافة</button>
    </form>
</div>