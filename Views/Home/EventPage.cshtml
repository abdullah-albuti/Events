@model IEnumerable<Event>
@{
    var items = ViewBag.FilteredItemss;
}

<div class="container py-5">
    <!-- عنوان الصفحة -->
    <div class="row mb-5">
        <div class="col-12">
            @if (items != null)
            {
                <h1 class="display-5 fw-bold text-primary mb-3 border-bottom pb-3">
                    <i class="fas fa-ticket-alt me-2"></i>
                    الفعاليات المتاحة في باقة @items.Name
                </h1>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="display-5 fw-bold text-primary">
                        <i class="fas fa-calendar-alt me-2"></i>
                        جميع الفعاليات
                    </h1>

                    <!-- نموذج البحث -->
                    <form asp-action="EventPageAll" method="get" class="search-box">
                        <div class="input-group">
                            <input type="text"
                                   name="searchString"
                                   class="form-control rounded-pill"
                                   placeholder="ابحث عن فعالية..."
                                   value="@Context.Request.Query["searchString"]">
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>

    <!-- بطاقات الفعاليات -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="event-card card h-100 shadow-lg border-0 overflow-hidden">
                    <!-- صورة الفعالية -->
                    <div class="card-image position-relative">
                        <img src="/images/@item.image"
                             alt="@item.Name"
                             class="img-fluid"
                             loading="lazy">
                        <div class="image-overlay"></div>
                        <span class="event-date badge bg-primary">
                            @item.Date.ToString("dd MMM")
                        </span>
                    </div>

                    <!-- محتوى البطاقة -->
                    <div class="card-body p-4">
                        <h3 class="card-title fw-bold mb-3">@item.Name</h3>

                        <div class="event-details mb-4">
                            <div class="detail-item d-flex align-items-center mb-2">
                                <i class="fas fa-map-marker-alt text-secondary me-2"></i>
                                <span>@item.Location</span>
                            </div>
                            <div class="detail-item d-flex align-items-center">
                                <i class="fas fa-tag text-success me-2"></i>
                                <span>@item.Price.ToString("C")</span>
                            </div>
                        </div>

                        <div class="d-grid">
                            <a asp-action="BookEvent"
                               asp-route-id="@item.EventId"
                               class="btn btn-primary btn-lg rounded-pill">
                                <i class="fas fa-shopping-cart me-2"></i>
                                احجز الآن
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>



    .card-image {
        height: var(--image-height);
        overflow: hidden;
        border-radius: 1rem 1rem 0 0;
    }

        .card-image img {
            width: 100%;
            height: 100%;
            transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

    .event-card:hover .card-image img {
        transform: scale(1.08);
    }

    .image-overlay {
        background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%);
    }

    @@media (max-width: 992px) {
        .card-image {
            height: var(--mobile-image-height);
        }
    }

    @@media (max-width: 576px) {
        :root {
            --mobile-image-height: 150px;
        }
    }
    :root {
        --image-height: 250px;
        --mobile-image-height: 180px;
       

        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e67e22;
    }

    /* زر الحجز */
    .btn-primary {
        background: var(--secondary-color);
        border: none;
        padding: 1rem 2rem;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: var(--primary-color);
            transform: scale(1.05);
        }

    /* مربع البحث */
    .search-box {
        max-width: 400px;
    }

        .search-box .form-control {
            border: 2px solid var(--primary-color);
            padding: 0.75rem 1.5rem;
        }

        .search-box .btn {
            margin-left: -50px;
            padding: 0.75rem 1.5rem;
        }

 

        .search-box {
            width: 100%;
            margin-top: 1rem;
        }
    }
</style>

<!-- رابط أيقونات Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">