@model Booking
@{
    var PackageToBookEvent = ViewBag.PackageToBookEvent;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <!-- بطاقة الحجز الرئيسية -->
            <div class="booking-card shadow-lg rounded-4 overflow-hidden">
                <!-- رأس البطاقة -->
                <div class="card-header bg-primary text-white p-4">
                    <h2 class="mb-0">
                        <i class="fas fa-calendar-check me-2"></i>
                        حجز فعالية @PackageToBookEvent.Name
                    </h2>
                </div>

                <!-- جسم البطاقة -->
                <div class="card-body p-4">
                    <form asp-action="Endtiketpage" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Event_ID" value="@PackageToBookEvent.EventId" />

                        <!-- حقل الاسم -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user me-2"></i>
                                الاسم الكامل
                            </label>
                            <input type="text"
                                   asp-for="CustomerName"
                                   class="form-control form-control-lg"
                                   placeholder="أدخل اسمك الثلاثي"
                                   required>
                            <div class="invalid-feedback">
                                الرجاء إدخال الاسم الكامل
                            </div>
                        </div>

                        <!-- حقل الهاتف -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-mobile-alt me-2"></i>
                                رقم الجوال
                            </label>
                            <input type="tel"
                                   asp-for="CustomerPhone"
                                   class="form-control form-control-lg"
                                   placeholder="05XXXXXXXX"
                                   pattern="05[0-9]{8}"
                                   required>
                            <div class="invalid-feedback">
                                الرجاء إدخال رقم جوال صحيح
                            </div>
                        </div>

                        <!-- حقل البريد -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope me-2"></i>
                                البريد الإلكتروني
                            </label>
                            <input type="email"
                                   asp-for="CustomerEmail"
                                   class="form-control form-control-lg"
                                   placeholder="example@domain.com"
                                   required>
                            <div class="invalid-feedback">
                                الرجاء إدخال بريد إلكتروني صحيح
                            </div>
                        </div>

                        <input type="hidden" asp-for="BookingDate" value="@DateTime.Now" />

                        <!-- زر الحجز -->
                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-lg btn-primary rounded-pill py-3">
                                <i class="fas fa-check-circle me-2"></i>
                                تأكيد الحجز الآن
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e67e22;
    }

    .booking-card {
        border: none;
        transition: transform 0.3s ease;
    }

        .booking-card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    .form-control {
        border: 2px solid #e0e0e0;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.25);
        }

    .form-control-lg {
        padding: 1rem 1.5rem;
    }

    .invalid-feedback {
        font-size: 0.9rem;
        margin-top: 0.5rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
        border: none;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: scale(1.02);
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
        }

        .btn-primary:before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient( 120deg, transparent, rgba(255, 255, 255, 0.3), transparent );
            transition: 0.6s;
        }

        .btn-primary:hover:before {
            left: 100%;
        }

    @@media (max-width: 768px) {
        .form-control-lg {
            font-size: 1rem;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    }
</style>

<!-- إضافة مكتبة Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- تفعيل التحقق من النموذج -->
<script>
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>