@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "نسيت كلمة المرور؟";
}

<div class="auth-container">
    <div class="auth-card">
        <!-- الشعار -->
        <div class="text-center mb-4">
            <img src="/images/logo.png" height="80" alt="الشعار" class="auth-logo">
        </div>

        <!-- العنوان الرئيسي -->
        <h1 class="auth-title">استعادة كلمة المرور</h1>
        <p class="auth-subtitle">أدخل بريدك الإلكتروني لإرسال رابط الاستعادة</p>

        <!-- نموذج الاستعادة -->
        <form method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- حقل الإيميل -->
            <div class="form-group icon-input">
                <i class="fas fa-envelope input-icon"></i>
                <input asp-for="Input.Email"
                       class="form-control"
                       placeholder="البريد الإلكتروني"
                       autocomplete="username">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- زر الإرسال -->
            <button type="submit" class="btn auth-btn">
                إرسال الرابط
                <i class="fas fa-paper-plane ms-2"></i>
            </button>

            <!-- رابط العودة لتسجيل الدخول -->
            <div class="text-center mt-4">
                <a asp-page="./Login" class="back-link">
                    <i class="fas fa-arrow-right me-2"></i>
                    العودة لتسجيل الدخول
                </a>
            </div>
        </form>
    </div>
</div>


    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
        }

        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(45deg, #f8f9fa, #e9ecef);
        }

        .auth-card {
            background: white;
            padding: 2rem;
            border-radius: 1.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }

        .auth-title {
            font-size: 1.8rem;
            color: var(--primary-color);
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            color: #666;
            text-align: center;
            margin-bottom: 2rem;
        }

        /* حقول الإدخال */
        .icon-input {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-icon {
            position: absolute;
            top: 50%;
            right: 1rem;
            transform: translateY(-50%);
            color: #666;
        }

        .form-control {
            padding-right: 2.5rem !important;
            border-radius: 0.5rem;
            border: 2px solid #eee;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--secondary-color);
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            }

        /* زر الإرسال */
        .auth-btn {
            background: var(--secondary-color);
            color: white;
            width: 100%;
            padding: 1rem;
            border-radius: 0.5rem;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .auth-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
            }

        /* الروابط */
        .back-link {
            color: #666;
            transition: color 0.3s ease;
        }

            .back-link:hover {
                color: var(--primary-color);
            }
    </style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}